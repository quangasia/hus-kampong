{% extends "KampongSiteBundle::layout.html.twig" %}
{% block slider %}
    <div id="banner" class="banner"><img alt="" src="{{asset("bundles/kampongsite/images/upload/banner-new.jpg")}}" class="img-responsive"></div>
    {% endblock %}
    {% block body %}
    <div class="row">
        <div class="col-sm-9 col-sm-push-3">
            <h2 class="title">Thông tin liên hệ</h2>
            {{detail.content|raw}}
            <h2 class="title">Form liên hệ</h2>
            {%if notice is not null%}<p>{{notice}}</p><br />{%endif%}
            <form class="row contact-form" method="POST">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="name">Tên<sup>*</sup></label>
                        {{form_widget(form.fullname)}}
                    </div>
                    <div class="form-group">
                        <label for="email">Email<sup>* </sup></label>
                        {{form_widget(form.email)}}
                    </div>
                    <div class="form-group">
                        <label for="phone">Số điện thoại<sup>*</sup></label>
                        {{form_widget(form.phone)}}
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="subject">Tiêu đề<sup>*</sup></label>
                        {{form_widget(form.title)}}
                    </div>
                    <div class="form-group">
                        <label for="msg">Nội dung<sup>*</sup></label>
                        {{form_widget(form.content)}}
                    </div>
                </div>
                <div class="col-sm-12 text-center">    
                    {{form_widget(form._token)}}
                    <button type="submit" class="btn btn-send"><span>Gửi</span><span class="fa fa-angle-right fa-2"></span></button>
                </div>
            </form>
        </div>
        <div class="col-sm-3 col-sm-pull-9">
            <div id="search" class="search">
                <form role="search" class="navbar-form navbar-left">
                    <div class="form-group">
                        <input type="text" placeholder="Search for recipes" class="form-control">            
                        <button type="submit" class="btn btn-default"><span class="fa fa-search"></span></button>
                    </div>
                </form>
            </div>
            <aside id="sidebar">
                <h2 class="title"><span class="fa fa-list-ul"></span><span>Thực đơn</span></h2>
                <div role="tablist" class="panel-group">
                    <div class="panel panel-default">
                        <div id="collapseListGroupHeading1" role="tab" class="panel-heading">
                            <h4 class="panel-title"><a data-toggle="collapse" href="#collapseListGroup1" aria-expanded="true" aria-controls="collapseListGroup1" class="collapsed"><span>Món ăn chơi</span><span class="fa fa-plus"></span></a></h4>
                        </div>
                        <div id="collapseListGroup1" role="tabpanel" aria-labelledby="collapseListGroupHeading1" aria-expanded="true" class="panel-collapse collapse">
