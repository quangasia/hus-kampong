{% set site_settings = settings.getAll()%}
<!DOCTYPE html>
<!--[if IE 8]><html lang="en" class="no-js ie ie8"><![endif]-->
<!--[if IE 9]><html lang="en" class="no-js ie ie9"><![endif]-->
<!--[if gt IE 9]><!-->
<html lang="en" class="no-js">
    <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1"><![endif]-->
        {%block head%}
        <title>{%if site_settings['meta_title'] is defined%} {{site_settings['meta_title']}}{%endif%}</title>
        <meta name="description" content="{%if site_settings['meta_description'] is defined%} {{site_settings['meta_description']}}{%endif%}">
        <meta name="keywords" content="{%if site_settings['meta_keywords'] is defined%}{{site_settings['meta_keywords']}}{%endif%}">

        <meta property="og:title" content="{%if site_settings['meta_title'] is defined%} {{site_settings['meta_title']}}{%endif%}" />
        <meta property="og:description" content="{%if site_settings['meta_description'] is defined%} {{site_settings['meta_description']}}{%endif%}" />
        <meta property="og:type" content="article" />
        {%endblock%}
        <meta name="robots" content="index, follow">
        <meta name="author" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1, minimal-ui">
        <link rel="shortcut icon" href="{{asset('favicon.ico')}}" type="image/x-icon">
        <link rel="stylesheet" href="{{asset('bundles/kampongsite/css/style.css')}}">
        <!--[if lt IE 8]><link rel="stylesheet" href="css/ie.css"><![endif]-->
        <link rel="stylesheet" href="{{asset('bundles/kampongsite/css/print.css')}}" media="print">
        {% block stylesheet %}{% endblock %}
        <script src="{{asset('bundles/kampongsite/js/modernizr.js')}}"></script>
    </head>
    <body class="home">
        <div id="app">
            <header id="header">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-2">
                            <a href="{{path('kampong_site_homepage')}}" alt="kampong" class="navbar-brand">
                                <img src="{{asset('bundles/kampongsite/images/logo.png')}}" alt="Kampong"/>
                            </a>
                        </div>
                        <div class="col-sm-10">
                            <div class="row">
                                {{ render(controller("KampongSiteBundle:Block:topMenu", {route: app.request.get('_route') }))}}
                            </div>
                            <div class="row">
                                <div class="col-xs-7 col-sm-6 col-sm-offset-3">
                                    <div class="hotline text-right"><span class="fa fa-phone-square"></span><span>Hotline: {%if site_settings.hotline is defined%}{{site_settings.hotline|raw}}{%endif%}</span></div>
                                </div>
                                <div class="col-xs-5 col-sm-3">
                                    <div class="social-tool text-right">
                                        <ul class="list-inline">
                                            <li><span>Share</span></li>
                                            <li><a title="Facebook" href="https://www.facebook.com/sharer/sharer.php?u=http://kampong.akadigital.vn/" class="fa fa-facebook"></a></li>
                                            <li><a title="Twitter" href="http://twitter.com/share?text=Kampong" class="fa fa-twitter"></a></li>
                                            <li><a title="Google plus" href="https://plus.google.com/share?url=http://kampong.akadigital.vn" class="fa fa-google-plus"></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <!-- /.navbar-collapse-->
                            </div>
                            <!-- /.container-fluid-->
                        </div>
                    </div>
                </div>
            </header>
            {% block slider %}
            {{ render(controller("KampongSiteBundle:Block:homepageSlide"))}}
            {% endblock %}
            <div class="inner">
                <main id="main">
                    <div class="container">
                        {% block body %}{% endblock %}
                    </div>
                    <div id="map" class="map">
                        {{ render(controller("KampongSiteBundle:Block:map"))}}
                    </div>
                </main>
            </div>
            <footer id="footer">
                {% include 'KampongSiteBundle:Block:footer.html.twig' %}
            </footer>
        </div>
        {% block jsscript %}
        <script src="{{asset('bundles/kampongsite/js/l10n.js')}}"></script>
        <script src="{{asset('bundles/kampongsite/js/libs.js')}}"></script>
        <script src="{{asset('bundles/kampongsite/js/script.js')}}"></script>
        <script src="{{asset('bundles/kampongsite/js/bootstrap.js') }}"></script>
        <script src="{{asset('bundles/kampongsite/js/respond.js') }}"></script>
        <script src="{{asset('js/frontend/rate.min.js') }}"></script>
        <script src="{{asset('js/frontend/app.js') }}"></script>
        {% endblock %}
        <!--[if lt IE 8]><p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p><![endif]-->
        <noscript>JavaScript is off. Please enable to view full site.</noscript>
    </body>
</html>
